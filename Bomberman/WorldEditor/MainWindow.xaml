<Window x:Class="WorldEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Save" Click="ButtonBase_OnClick"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <RadioButton Content="Koala" Checked="KoalaChecked" Background="Black"/>
            <RadioButton Content="Platypus" Checked="PlatypusChecked" Background="Green"/>
            <RadioButton Content="Wombat" Checked="WombatChecked" Background="Blue"/>
            <RadioButton Content="Kangaroo" Checked="KangarooChecked" Background="Yellow"/>
            <RadioButton Content="Taipan" Checked="TaipanChecked" Background="Red"/>
            <RadioButton Content="Wall" Checked="WallChecked" Background="DarkGray"/>
            <RadioButton Content="DestructibleWall" Checked="DestructibleWallChecked" Background="DimGray"/>
        </StackPanel>
        
        <Grid Grid.Row="2" x:Name="Grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        </Grid>
    </Grid>
</Window>
